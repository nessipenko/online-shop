{
  "compilerOptions": {
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["es6", "dom", "es7"],
    "target": "es5",
    "paths": {
      "react": ["./node_modules/@types/react"]
    },
    "typeRoots": ["src/types"]
  },
  "exclude": ["node_modules"]
}
